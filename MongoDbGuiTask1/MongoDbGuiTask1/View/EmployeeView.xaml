<UserControl x:Class="MongoDbGuiTask1.View.EmployeeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MongoDbGuiTask1.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <Label Content="Имя" />
        <TextBox Text="{Binding Name}" />
        <Label Content="Должность" />
        <TextBox Text="{Binding Position}" />
        <Label Content="Зарплата" />
        <TextBox Text="{Binding Salary}" />
        <Label Content="Пароль" />
        <TextBox Text="{Binding PasswordData}" />
        <Label Content="Адрес" />
        <TextBox Text="{Binding Address}" />
        <Label Content="Номер телефона" />
        <TextBox Text="{Binding PhoneNumber}" />
        <Label Content="Почта" />
        <TextBox Text="{Binding Email}" />
    </StackPanel>
</UserControl>
